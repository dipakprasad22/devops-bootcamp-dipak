#!/bin/bash
# Copy to .env and edit
export SECRET_KEY=supersecret_from_env_file # Change this to your secret key
export PORT=5000 # Change this to your desired port
export DEBUG=true # Set to false in production
export FLASK_APP=app.py # Name of your Flask application file
export FLASK_ENV=development # Set to production in production environment
export FLASK_DEBUG=false # Set to true for development, false for production
export DATABASE_URL=sqlite:///app.db # Change this to your database URL if needed
export LOG_LEVEL=info # Change to debug, warning, error, critical as needed
export CORS_ORIGINS=http://localhost:3000 # Change to your frontend URL if applicable
export ALLOWED_HOSTS=localhost,